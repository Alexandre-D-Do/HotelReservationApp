<Window x:Class="HotelReservationApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelReservationApp" xmlns:views="clr-namespace:HotelReservationApp.Views"
        xmlns:vms="clr-namespace:HotelReservationApp.ViewModels"
        mc:Ignorable="d"
        Title="Hotel Reservation Application" Height="450" Width="800"
        FontSize="14"
        Background="#1E1E1E">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20, 10" MaxWidth="600">
            <Grid.Resources>
                <DataTemplate DataType="{x:Type vms:MakeReservationViewModel}">
                    <views:MakeReservationView/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type vms:ReservationListingViewModel}">
                    <views:ReservationListingView/>
                </DataTemplate>
            </Grid.Resources>

            <ContentControl Content="{Binding CurrentViewModel}"/>

        </Grid>
    </ScrollViewer>
</Window>
